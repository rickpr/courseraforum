<h1>Listing forums</h1>

<table>
  <thead>
    <tr>
      <th>Parent</th>
      <th>Name</th>
      <th>Description</th>
      <th>Ftype</th>
      <th>Deleted</th>
      <th>Can post</th>
      <th>Show threads</th>
      <th>Resolved tag</th>
      <th>Display order</th>
      <th>Open time</th>
      <th>Forum moderators only</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.parent_id %></td>
        <td><%= forum.name %></td>
        <td><%= forum.description %></td>
        <td><%= forum.ftype %></td>
        <td><%= forum.deleted %></td>
        <td><%= forum.can_post %></td>
        <td><%= forum.show_threads %></td>
        <td><%= forum.resolved_tag %></td>
        <td><%= forum.display_order %></td>
        <td><%= forum.open_time %></td>
        <td><%= forum.forum_moderators_only %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

