<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>User</th>
      <th>Post time</th>
      <th>Edit time</th>
      <th>Deleted</th>
      <th>Is spam</th>
      <th>Original</th>
      <th>Stickied</th>
      <th>Approved</th>
      <th>Anonymous</th>
      <th>Votes</th>
      <th>Post text</th>
      <th>User agent</th>
      <th>Text type</th>
      <th> viewer can vote</th>
      <th> viewer can edit</th>
      <th> user title</th>
      <th> user full name</th>
      <th> user profile link</th>
      <th> user email address</th>
      <th> user search link</th>
      <th> user details link</th>
      <th> show signature track label</th>
      <th>Link</th>
      <th> reporter link</th>
      <th>Fthread</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.order %></td>
        <td><%= post.user_id %></td>
        <td><%= post.post_time %></td>
        <td><%= post.edit_time %></td>
        <td><%= post.deleted %></td>
        <td><%= post.is_spam %></td>
        <td><%= post.original %></td>
        <td><%= post.stickied %></td>
        <td><%= post.approved %></td>
        <td><%= post.anonymous %></td>
        <td><%= post.votes %></td>
        <td><%= post.post_text %></td>
        <td><%= post.user_agent %></td>
        <td><%= post.text_type %></td>
        <td><%= post._viewer_can_vote %></td>
        <td><%= post._viewer_can_edit %></td>
        <td><%= post._user_title %></td>
        <td><%= post._user_full_name %></td>
        <td><%= post._user_profile_link %></td>
        <td><%= post._user_email_address %></td>
        <td><%= post._user_search_link %></td>
        <td><%= post._user_details_link %></td>
        <td><%= post._show_signature_track_label %></td>
        <td><%= post.link %></td>
        <td><%= post._reporter_link %></td>
        <td><%= post.fthread %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

